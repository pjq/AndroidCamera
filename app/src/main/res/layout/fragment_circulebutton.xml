<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyActivity$PlaceholderFragment">

    <at.markushi.ui.CircleButton
        android:id="@+id/startPicassoButton"
        android:layout_width="96dip"
        android:layout_height="96dip"
        android:src="@drawable/ic_action_tick"
        app:cb_color="#99CC00"
        app:cb_pressed_ring_width="8dip" />


    <LinearLayout
        android:id="@+id/column1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startPicassoButton"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <at.markushi.ui.CircleButton
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#99CC00"
            app:cb_pressed_ring_width="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button1"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#FFBB33"
            app:cb_pressed_ring_width="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button2"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#FF4444"
            app:cb_pressed_ring_width="8dip" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/column2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startPicassoButton"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/column1"
        android:gravity="center"
        android:orientation="vertical">

        <at.markushi.ui.CircleButton
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#ffccaf19"
            app:cb_pressed_ring_width="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button1"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#ffff2da1"
            app:cb_pressed_ring_width="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button2"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#ffc418ff"
            app:cb_pressed_ring_width="8dip" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/column3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startPicassoButton"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/column2"
        android:gravity="center"
        android:orientation="vertical">

        <at.markushi.ui.CircleButton
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#ffcc833c"
            app:cb_pressed_ring_width="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button1"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#ffa151ff"
            app:cb_pressed_ring_width="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button2"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#ff4390ff"
            app:cb_pressed_ring_width="8dip" />

    </LinearLayout>

</RelativeLayout>
